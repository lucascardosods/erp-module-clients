<% include ../base_logged.ejs %>

<div id="content-wrapper">
    <div class="mui--appbar-height"></div>
    <div class="mui-container-fluid">
        <br>
        <% if(clients && clients.length > 0){ %>
        <div class="table">
            <div class="table-header">
                <div class="header__item"><a id="name" class="filter__link" href="#">Nome</a></div>
                <div class="header__item"><a id="email" class="filter__link filter__link--number" href="#">Cidade</a></div>
            </div>
            <div class="table-content">
                <% clients.forEach(function (client){ %>
                <div class="table-row">
                    <div class="table-data"><%- client.name %></div>
                    <div class="table-data"><%- client.city %></div>
                </div>
                <% }); %>
            </div>

        </div>
        <% } %>
    </div>
</div>



</body>
</html>